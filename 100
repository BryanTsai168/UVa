#include <bits/stdc++.h>
#define ll long long 
using namespace std;
int main(){
	//ios_base::sync_with_stdio(0);cin.tie(0);
	ll a,b;
	while(cin>>a>>b){
		ll result=0;
		for(ll i=(a>b?b:a);i<=(a>b?a:b);++i ){
			ll tmp=i,num=0;
			while(tmp!=1){
				if(tmp%2==1) tmp=tmp*3+1;
				else tmp/=2;
				num++;
			}
			
			if(num>=result) result=num;
		}
		cout << a << ' ' << b << ' ' << result+1 << '\n' ;
	}
}
